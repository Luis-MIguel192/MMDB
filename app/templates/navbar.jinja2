{% macro barra_navegacao() %}
    {% from 'bootstrap5/utils.html' import render_icon %}
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top rounded-4 shadow-lg mt-3 mx-3 px-3 py-3">
        <div class="container-fluid position-relative">
            <!-- Brand -->
            <a class="navbar-brand" href="{{ url_for('root.index') }}">
                myMovieDB <small>beta</small>
            </a>

            <!-- Search form -->
            <form class="search-form d-flex" role="search" action="{{ url_for('filmes.buscar') }}" method="get">
                <input class="form-control" type="search" name="q"
                       placeholder="Buscar filmes ou pessoas" aria-label="Buscar">
                <button class="btn btn-primary btn-sm ms-2" type="submit">
                    {{ render_icon('search') }} Buscar
                </button>
            </form>

            <!-- Navbar toggler and menus -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#topNavbar" aria-controls="topNavbar" aria-expanded="false"
                    aria-label="Alternar navegação">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="topNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">

                    <!-- Menu Filmes -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="filmesDropdown"
                           role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            {{ render_icon('film') }} Filmes
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="filmesDropdown">
                            <li><a class="dropdown-item" href="{{ url_for('filmes.listar_filmes') }}">{{ render_icon('list-ul') }} Lista</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('filmes.filmes_populares') }}">{{ render_icon('star-fill') }} Populares</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('filmes.filmes_em_cartaz') }}">{{ render_icon('calendar-event') }} Em cartaz</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('filmes.listar_generos') }}">{{ render_icon('tags') }} Por Gênero</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#" onclick="alert('Funcionalidade em desenvolvimento')">{{ render_icon('plus-circle') }} Adicionar filme</a></li>
                        </ul>
                    </li>

                    <!-- Menu Pessoas -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="pessoasDropdown"
                           role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            {{ render_icon('people-fill') }} Pessoas
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="pessoasDropdown">
                            <li><a class="dropdown-item" href="{{ url_for('filmes.listar_pessoas') }}">{{ render_icon('list-ul') }} Lista</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('filmes.listar_atores') }}">{{ render_icon('person-badge') }} Atores</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('filmes.listar_equipe_tecnica') }}">{{ render_icon('tools') }} Equipe técnica</a></li>
                            <li><a class="dropdown-item" href="{{ url_for('filmes.listar_cargos') }}">{{ render_icon('briefcase') }} Por Cargo</a></li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#" onclick="alert('Funcionalidade em desenvolvimento')">{{ render_icon('person-plus') }} Adicionar pessoa</a></li>
                        </ul>
                    </li>

                    <!-- Menu acesso ao sistema -->
                    <li class="nav-item dropdown ms-md-3">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown">
                            {% if current_user.is_anonymous %}
                                <span class="fw-semibold">Acesso ao sistema</span>
                            {% else %}
                                <img src="{{ url_for('auth.avatar', user_id=current_user.id, _external=False) }}?v={{ current_user.updated_at.timestamp() if current_user.updated_at else '' }}"
                                     alt="Avatar"
                                     class="rounded-circle me-2"
                                     style="width: 32px; height: 32px; object-fit: cover;">
                            {% endif %}
                        </a>
                        <ul class="dropdown-menu dropdown-menu-lg-end">
                            {% if current_user.is_anonymous %}
                                <li><a class="dropdown-item"
                                       href="{{ url_for("auth.login") }}">{{ render_icon('box-arrow-in-right') }}&nbsp;Login</a>
                                </li>
                                <li><a class="dropdown-item"
                                       href="{{ url_for("auth.register") }}">{{ render_icon('person-plus') }}&nbsp;Criar
                                    conta</a></li>
                            {% else %}
                                <li><a class="dropdown-item"
                                       href="{{ url_for("auth.profile") }}">{{ render_icon('person') }}&nbsp;Perfil</a>
                                </li>
                                <li><a class="dropdown-item"
                                       href="{{ url_for("auth.logout") }}">{{ render_icon('box-arrow-right') }}&nbsp;Logout</a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
{% endmacro %}
