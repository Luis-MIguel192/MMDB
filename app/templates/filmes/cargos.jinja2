{% extends "_layout.jinja2" %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ url_for('root.index') }}">In√≠cio</a></li>
                    <li class="breadcrumb-item"><a href="{{ url_for('filmes.listar_pessoas') }}">Pessoas</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Cargos</li>
                </ol>
            </nav>
            
            <h1 class="mb-4">üé¨ Cargos no Cinema</h1>
            
            {% if cargos %}
                <div class="row">
                    {% for cargo in cargos %}
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                <h5 class="card-title">{{ cargo }}</h5>
                                <a href="{{ url_for('filmes.pessoas_por_cargo', cargo=cargo.lower().replace(' ', '-')) }}" 
                                   class="btn btn-primary">
                                    Ver Pessoas
                                </a>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            {% else %}
                <div class="alert alert-info">
                    <h4>Nenhum cargo encontrado</h4>
                    <p>Ainda n√£o h√° cargos cadastrados no sistema.</p>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}